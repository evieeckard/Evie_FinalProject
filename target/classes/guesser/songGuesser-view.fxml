<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.media.MediaView?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="500.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="guesser.GuesserController">
   <children>
      <Label alignment="CENTER" layoutX="43.0" layoutY="17.0" prefHeight="80.0" prefWidth="200.0" text="Guess the Song!" textAlignment="CENTER">
         <font>
            <Font name="Avenir Book" size="25.0" />
         </font>
      </Label>
      <Button layoutX="295.0" layoutY="17.0" mnemonicParsing="false" onAction="#onAnimalGuessClick" prefHeight="30.0" prefWidth="90.0" text="Play another game">
         <font>
            <Font name="Avenir Book" size="9.0" />
         </font>
      </Button>
      <Label layoutX="22.0" layoutY="111.0" prefHeight="17.0" prefWidth="178.0" text="Enter your guess:" />
      <TextField fx:id="txtSongGuess" layoutX="22.0" layoutY="136.0" prefHeight="26.0" prefWidth="270.0" />
      <Button layoutX="316.0" layoutY="135.0" mnemonicParsing="false" onAction="#onEnterSong" text="Enter">
         <font>
            <Font name="Avenir Book" size="13.0" />
         </font>
      </Button>
      <MediaView fx:id="songPlayer" fitHeight="200.0" fitWidth="200.0" layoutX="100.0" layoutY="175.0" />
      <Button layoutX="81.0" layoutY="383.0" mnemonicParsing="false" onAction="#playSong" prefHeight="26.0" prefWidth="60.0" text="Play" />
      <Button layoutX="159.0" layoutY="383.0" mnemonicParsing="false" onAction="#pauseSong" prefHeight="26.0" prefWidth="60.0" text="Pause" />
      <Button layoutX="235.0" layoutY="383.0" mnemonicParsing="false" onAction="#resetSong" prefHeight="26.0" prefWidth="60.0" text="Reset" />
      <Label fx:id="lblSongResult" alignment="CENTER" layoutX="100.0" layoutY="427.0" prefHeight="50.0" prefWidth="200.0" />
   </children>
</AnchorPane>
